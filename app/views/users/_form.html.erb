<div class="container">
  <div class="card-text">
    <div class="row justify-content-center">
    <div class="col-10">
    <%= render '/pages/shared/errors', obj: @user %>

    <%= form_with(model: @user, class: "shadow p-5 mb-5 bg-dark", local: true) do |f| %>
    <div class="form-group row">
      <%= f.label :username, class: "col-2 col-form-label"%>
      <div class="col-10">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
      </div>
    </div>

    <div class="for-group row">
      <%= f.label :email, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
      </div>
    </div>

    <div class="for-group row">
      <%= f.label :password, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.password_field :password, class: "form-control", placeholder: "Please enter a password:" %>
      </div>
    </div>
    

    <div class="form-group row justify-content-center mt-4">
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %> 
    </div>
  <% end %>
  </div>

</div>
<div  class="mb-3">
  <%= link_to '[ Return to articles ]', articles_path, class: "justify-content-center" %> 
 </div>
  </div>
</div>

