<h1 class="text-center mt4">Categories</h1>


<div class="apple_pagination">
  <%= will_paginate @categories, :container => false %>
</div>


<div class="container">
  <% @categories.each do |category| %>
    <div class="row-md-4 d-flex justify-content-center"  >
    <div class="col-4 mt-4">
      <div class="card text-center shadow-lg mb-5 bg-dark ">
        <div class="card-body">
          <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-" %></h5>
          <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
        </div>

        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(category.created_at) %> ago,
            edited <%= time_ago_in_words(category.updated_at) %> ago</small>
        </div>

      </div>
    </div>

  </div>
 
  <% end %>
</div>

<div class="apple_pagination mb-3">
  <%= will_paginate @categories, :container => false %>
</div>

