<h1 class="text-center mt-4"> Create a new category</h1>

<div class="container">
  <div class="card-text">
    <div class="row justify-content-center">
    <div class="col-10">
    <%= render '/pages/shared/errors', obj: @category %>

    <%= form_with(model: @category, class: "shadow p-5 mb-5 bg-dark", local: true) do |f| %>
    <div class="form-group row">
      <%= f.label :name, "Category name", class: "col-2 col-form-label"%>
      <div class="col-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
      </div>
    </div>

    

    <div class="form-group row justify-content-center mt-4">
      <%= f.submit class: "btn btn-outline-light btn-lg" %> 
    </div>
  <% end %>
  </div>

</div>
<div  class="mb-3">
  <%= link_to '[ Return to articles ]', articles_path, class: "justify-content-center" %> 
 </div>
  </div>
</div>


