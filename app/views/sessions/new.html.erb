<h1 class="text-center mt-4">Log in</h1>


<div class="container">
    <div class="row justify-content-center">
    <div class="col-10">

    <%= form_with(scope: :session, url: login_path, class: "shadow p-5 mb-5 bg-dark", local: true) do |f| %>

    <div class="for-group row">
      <%= f.label :email, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
      </div>
    </div>

    <div class="for-group row mt-3">
      <%= f.label :password, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.password_field :password, class: "form-control", placeholder: "Please enter your password:" %>
      </div>
    </div>
    

    <div class="form-group row justify-content-center mt-4">
      <%= f.submit "login", class: "btn btn-outline-light btn-lg" %> 
    </div>
  <% end %>
  </div>

</div>
<div class="mb-3">
  <%= link_to '[ Return to articles ]', articles_path, class: "justify-content-center" %> 
 </div>
</div>


