<div class="container">
    <div class="row justify-content-center">
    <div class="col-10">
    <%= render '/pages/shared/errors', obj: @article %>

    <%= form_with(model: @article, class: "shadow p-5 mb-5 bg-dark", local: true) do |f| %>
    <div class="form-group row">
      <%= f.label :title, class: "col-2 col-form-label"%>
      <div class="col-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
      </div>
    </div>

    <div class="for-group row">
      <%= f.label :description, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_area :description, rows: 10,  class: "form-control", placeholder: "Description" %>
      </div>
    </div>
     
    <div class="for-group row mt-3">
      <%= f.label :category, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.collection_select(:category_ids, Category.all, :id, :name,
                                {prompt: "Select a category from the list below (can be empty)"},
                                {multiple: true, size: 3, class: "custom-select shadow rounded"}) %>
      </div>
    </div>

    <div class="form-group row justify-content-center mt-4">
      <%= f.submit class: "btn btn-outline-light btn-lg" %> 
    </div>
  <% end %>
  </div>

</div>
<div class="mb-3">
  <%= link_to '[ Return to articles ]', articles_path, class: "justify-content-center" %> 
 </div>
</div>

